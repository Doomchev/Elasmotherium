Player {
	($firstName, $lastName, $age) {
		global lastPlayerName = $firstName + " " + $lastName
	}
	String firstName, lastName
	age = 18
	incrementAge() {
		$age++
	}
	description(String description) -> "\($firstName) \($lastName), \($age) years old, is \(description)"
}

description = "looking around"
player = Player("John", "Smith", 36)
player.incrementAge()
print(player.description(description))
print(lastPlayerName)