шаблон числ*;
число = случайноеЦелое(100);
повторять {
	предположение = спроситьЦелое("Какое число я загадал?");
	если(предположение < числа) {
		сообщить("Ваше число слишком маленькое!");
	} иначе если(предположение > числа) {
		сообщить("Ваше число слишком большое!");
	} иначе {
		сообщить("Вы правы!");
		выход();
	}
}