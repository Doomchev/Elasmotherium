глобальная Локация локац[ия]
 


объект Инвентарь
  Список<Контейнер> контейнеры = Список()



предметы = Контейнер



класс Локация
  Словарь<Строка, Процедура> команды

  описание()



класс Предмет
  взять()
    предметы += этот
    
  положить()
    попробовать("$этот.название не найден в инвентаре.")
      предметы -= этот
    локация.предметы += этот



класс Команда(Строка название)
  условие() -> да
  функция()



класс Выход(Строка назван[ие], Локация локац[ия]) это Команда(название)
  функция() -> идтиВ(локацию)



